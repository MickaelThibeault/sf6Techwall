{% extends 'template.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block PageTitle %}Utilisateurs{% endblock %}

{% block body %}


    {% include('fragments/dateJour.html.twig') %}

    <div class="alert alert-warning">
        <a href="{{ path('app_tab', {nb:7}) }}">Stats table</a>
    </div>

    <table class="table">
        <tr class="table-active">
            <th>Firstname</th>
            <th>Name</th>
            <th>Age</th>
            <td>Message</td>
        </tr>
        {% for user in users %}
        <tr class="table-{% if loop.index is odd %}danger{% else %}warning{% endif %}">
            <td>{{ user.firstName }}</td>
            <td>{{ user.name }}</td>
            <td>{{ user.age }}</td>
            <td>
                {{ render(controller('App\\Controller\\FirstController::sayHello', {firstName: user.firstName, name: user.name})) }}
            </td>
        </tr>
        {% endfor %}
    </table>
{% endblock %}
